@* ReSharper disable Html.PathError *@
@using CapaNavDoc.ViewModel.Equipment
@model EquipmentMonitoringViewModel

<link href="~/Content/EditFormStyle.css" rel="stylesheet" />

<form id="EditForm" method="post" action="/Equipment/UpdateEquipmentMonitoring">
    @Html.HiddenFor(m => m.EquipmentId)
    <table class="EditFormTable">
        <tr>
            <td>Responsable:</td>
            <td>
                @Html.DropDownListFor(m => m.SelectedUserCall, new SelectList(Model.Users))
            </td>
        </tr>
        <tr>
            <td>Date:</td>
            <td>
                @Html.TextBoxFor(m => m.Date, new {@id = "MonitoringDate"})
                @Html.ValidationMessageFor(m => m.Date)
            </td>
        </tr>
    </table>
</form>

<script>
    $("input").input();
    $("select").selectmenu({ width: 204 });
    $('input[id="MonitoringDate"]').datepicker({
        dateFormat: "dd-mm-yy",
        dayNames: [ "Lundi", "Mardi", "Mercredi", "Jeudi", "Vendredi", "Samedi", "Dimanche" ],
        dayNamesMin: ["Di", "Lu", "Ma", "Me", "Je", "Ve", "Sa" ],
        firstDay: 1,
        monthNames: [ "Janvier", "Février", "Mars", "Avril", "Mai", "Juin", "Juillet", "Aout", "Septembre", "Octobre", "Novembre", "Décembre" ]
    });
</script>
@using CapaNavDoc.ViewModel
@model ActionListViewModel

@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@section TitleSection
{
    Actions
}

@section HeaderSection
{
<link href="~/Content/GridViewStyle.css" rel="stylesheet" />
<link href="~/Content/datatables.css" rel="stylesheet" />

<script src="~/Scripts/datatables.js"></script>
<script src="~/Scripts/Validations.js"></script>
<script src="~/Scripts/Dialog.js"></script>
<script src="~/Scripts/MyDataTable.js"></script>

<script>
        $(function() {
            SetDataTable(
                "ActionDataTable",
                "/Action/AjaxHandler",
                [
                    { "sName: ": "Description" }
                ],
                "@Url.Action("GetActionUpdateView")",
                "Mise à jour d*une action",
                380,
                "@Url.Action("GetConfirmationView")",
                "Suppression d*une action",
                460
            );
            document.getElementById("AdministrationLink").className += "ActiveLink";
        });
</script>
}

@section ContentBody
{
    <div class="PageTitle">
        Gestion des actions.
    </div>
    
    <div style="padding: 15px;">
        <table id="ActionDataTable" class="display">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td><button type="button" onclick="ShowDialog('Ajout d\'une action', 380, '@Url.Action("GetActionInsertView")', 'EditForm', 'ActionDataTable');">Ajouter une action</button></td>
            </tr>
            </tfoot>
        </table>
    </div>
}
